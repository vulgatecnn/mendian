# 环境变量配置示例文件
# 复制此文件为 .env 并填入实际值

# 数据库配置
DB_NAME=store_lifecycle
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Django 配置
SECRET_KEY=your_very_secret_key_here_change_in_production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# 前端配置
FRONTEND_URL=https://your-domain.com
VITE_API_BASE_URL=https://your-domain.com

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# 企业微信配置
WECHAT_CORP_ID=your_wechat_corp_id
WECHAT_AGENT_ID=your_wechat_agent_id
WECHAT_SECRET=your_wechat_secret

# Docker 配置
DOCKER_USERNAME=your_docker_username

# 监控配置
GRAFANA_PASSWORD=your_grafana_password

# SSL 证书配置
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# 邮件配置
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True

# 对象存储配置 (可选)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_s3_bucket
AWS_S3_REGION_NAME=us-east-1

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/store-lifecycle/

# 性能配置
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30
NGINX_WORKER_CONNECTIONS=1024