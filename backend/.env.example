# Application Configuration
NODE_ENV=development
PORT=7100
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/mendian_dev?schema=public"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/mendian_test?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# WeChat Work OAuth Configuration
WECHAT_WORK_CORP_ID=your-wechat-corp-id
WECHAT_WORK_CORP_SECRET=your-wechat-corp-secret
WECHAT_WORK_AGENT_ID=your-wechat-agent-id
WECHAT_WORK_REDIRECT_URI=http://localhost:7000/auth/wechat/callback

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:7000
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@example.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_TITLE=好饭碗门店生命周期管理系统 API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=Enterprise Store Lifecycle Management System API Documentation